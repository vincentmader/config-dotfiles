#                                                    add deferred item to inbox
tickle () {  #                                 usage e.g.: tick monday do stuff
    deadline=$1
    shift
    in +tickle wait:$deadline $@
}
alias tick=tickle
#                                  add item to inbox that I need to think about 
alias think='tickle +1d'  
