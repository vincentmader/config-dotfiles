# Tags 
# =============================================================================

snippet !html_doc "Description" b
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>$1</title>
</head>
<body>
    $2
</body>
</html>
endsnippet

snippet body "body tag"
<body>
    $1
</body>
endsnippet

snippet canvas "cavas"
<canvas id="$1"></canvas id="$1">
endsnippet

snippet cdn "CDN link"
<script src="$1">
endsnippet

snippet document "template for new document"
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>$1</title>
</head>
<body>
    $2
</body>
</html>
endsnippet

snippet head "head tag"
<head>
    $1
</head>
endsnippet

snippet html "html tag"
<html>
    $1
</html>
endsnippet

snippet script "script tag"
<script>
    $1
</script>
endsnippet

snippet script_source "script tag"
<script src="$1"></script>
endsnippet

snippet span "span"
<span>
    $1
</span>
endsnippet

snippet style "style"
<style>
    $1	
</style>
endsnippet

snippet tag "html tag" b
<${1:div}>
    
</${1/(\w+).*/$1/}>
endsnippet

snippet div "div tag"
<div>
    $1
</div>
endsnippet

snippet divclass "div tag with class argument"
<div class="$1">
    $1
</div>
endsnippet

snippet divid "div tag with id argument"
<div id="$1">
    $1
</div>
endsnippet

snippet title "title"
<title>$1</title>
endsnippet

snippet link_css "include external stylesheet"
