#!/bin/sh

# echo "BASH_RC"

# -----------------------------------------------------------------------------
# 			      $CONF/bash/bashrc
# -----------------------------------------------------------------------------
    
# If not running interactively, don't do anything
# =============================================================================

    [[ $- != *i* ]] && return

# source ~/.config/zsh/pathrc
# =============================================================================

    source /home/vinc/.config/zsh/pathrc

# auto-start xorg on login
# =============================================================================

    if [[ "$OSTYPE" == "darwin"* ]]; then
        printf ""
    elif [[ "$OSTYPE" == "linux"* ]]; then
        exec startx
        # ~/.fehbg
    fi
    
